<!DOCTYPE html>
<html>
<head>
    <title>Map Route</title>
    <style>
        #map {
            height: 500px;
            width: 80%;
            margin: auto;
            margin-top: 20px;
        }
        form {
            text-align: center;
            margin-top: 20px;
        }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBEZA6PUdw8jk8-u0kVyhGIsh1F3LSSkT4"></script>
</head>
<body>
    <form action="/calculate-distances" method="get" target="_self">
        <label for="start">Start Location:</label>
        <select name="start" id="start">
            <option>Clock Tower</option>
            <option>ISBT (Inter-State Bus Terminal) Dehradun</option>
            <option>Rajpur Road</option>
            <option>Pacific Mall</option>
            <option>Clement Town</option>
        </select>
        <label for="end">End Location:</label>
        <select name="end" id="end">
            <option>Clock Tower</option>
            <option>ISBT (Inter-State Bus Terminal) Dehradun</option>
            <option>Rajpur Road</option>
            <option>Pacific Mall</option>
            <option>Clement Town</option>
        </select>
        <button type="submit">Get Shortest Path</button>
    </form>

    <div id="map"></div>

    <script>
        function initMap() {
            const center = { lat: 30.3165, lng: 78.0322 }; // Dehradun coordinates
            const map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: center
            });
        }
        window.onload = initMap;
    </script>
</body>
</html>